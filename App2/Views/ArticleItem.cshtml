@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.ArticleItem>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}

<div class="row">
    <div class="col-md-1"><br /></div>
    <div class="col-md-2 bg-light" style="padding:10px; border-radius: 10px;">@Umbraco.RenderMacro("listArticles")</div>
    <div class="col-md-1"><br /></div>
    <hr class="clearfix w-100 d-md-none pb-3">
    <div class="col-md-6">
        <h1>@Model.ArticleTitle</h1>
        <sub>Written by @Model.WriterName</sub>
        <br />
        <br />
        <p>@Model.ArticleContent</p>
    </div>
</div>
